<br><br>

<%= form_with(model: @question, local: true) do |form| %>
  <% if @question.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@question.errors.count, "error") %> バリデーションエラーが発生しています</h2>
      <ul>
      <% @question.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.text_field :title , placeholder: "質問のタイトルを記入..." ,class:"form-control"%>
  </div>

  <div class="form-group">
    <%= form.text_area :content,:size => "50x20", placeholder: "質問内容を記入（マークダウン記法が使えます）...", class:"form-control" %>
  </div>

  <div class="actions">
    <%= form.submit "決定",class:"btn btn-success"%>
  </div>
<% end %>
