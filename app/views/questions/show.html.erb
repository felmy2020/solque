<h1><%= t('views.question.show')%></h1>

<%= link_to '編集', edit_question_path(@question) ,class:"btn btn-success" %>
<%= link_to '削除', @question, method: :delete, data: { confirm: t('Are_you_sure?') } ,class:"btn btn-danger"%>

<br><br>

<table class="table">
  <tbody>
      <tr>
        <td>タスク名</td>
        <td><%= @question.title %></td>
      </tr>
      <tr>
        <td>内容</td>
        <td><%= markdown(@question.content).html_safe %></td>
      </tr>
  </tbody>
</table>

<h1><%= t('views.answer.index')%></h1>
<% unless @question.answers.count.zero? %>

  <p>
    <strong>Answer:</strong>
    <%= @question.answers.count.to_s + "answers" %>
  </p>

  <p>
    <%= render @question.answers %>
  </p>
<% end %>

<h1><%= t('views.answer.new')%></h1>
<p>
  <%= render 'answers/form', question: @question %>
</p>
