<h1><%= t('views.question.edit')%></h1>

<%= link_to '一覧に戻る', questions_path, class:"btn btn-primary" %>
<%= link_to '編集', edit_question_path(@question) ,class:"btn btn-success" %>
<%= link_to '削除', @question, method: :delete, data: { confirm: t('Are_you_sure?') } ,class:"btn btn-danger"%>

<br><br>

<table class="table">
  <tbody>
      <tr>
        <td>タスク名</td>
        <td><%= @question.title %></td>
      </tr>
      <tr>
        <td>内容</td>
        <td><%= @question.content %></td>
      </tr>
  </tbody>
</table>
