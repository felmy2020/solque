
<% if @user.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@user.errors.count, "error") %> prohibited this <%= @user.name %> from being saved:</h2>
  <ul>
    <% @user.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>


<br>
<div class="card mx-autor">
  <h2 class="card-header">プロフィール編集</h2>
  <div class="card-body">

    <%= form_with(model: @user, local: true) do |f| %>
    <div class="form-group">
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name ,class:"form-control"%>
      </div>

      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email ,class:"form-control"%>
      </div>

      <div class="form-group">
        <%= f.file_field :icon %>
        <%= f.hidden_field :icon_cache %>
          <br>
        <%= image_tag(@user.icon.url,:size => "300x300") if @user.icon && @user.icon.url %>

      </div>

      <div class="form-group">
        <%= f.label :profile %>
        <%= f.text_area :profile ,class:"form-control" %>
      </div>

      <div class="actions">
        <%= f.submit '完了',class:"btn btn-primary btn-block" %>
      </div>

      <% end %>
    </div>
  </div>
</div>
